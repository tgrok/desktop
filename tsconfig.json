{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
